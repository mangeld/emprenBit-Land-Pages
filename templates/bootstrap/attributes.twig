{% macro colors_style(color, backgroundColor) %}
    style="
    {% if color %}
        color:{{ color }};
    {% endif %}
    {% if backgroundColor %}
        background: none;
        background-color: {{ backgroundColor }};
    {% endif %}
    "
{% endmacro %}

{% macro backgroundColorStyle(bColor) %}
    style="
    {% if bColor %}
        background-color: {{ bColor }}
    {% endif %}
    "
{% endmacro %}
